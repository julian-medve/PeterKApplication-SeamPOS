@page
@model PeterKApplication.Web.Pages.Agents.Index

@{
    ViewData["Title"] = "Agents";
}

<h1>Agents</h1>
<a href="/Agents/Edit" class="btn btn-primary">Add new</a>
<form>
    <p>
        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Agent Prefix</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var a in Model.Agents)
    {
        <tr>
            <td>
                @Html.DisplayFor(_ => a.FirstName)
            </td>
            <td>
                @Html.DisplayFor(_ => a.LastName)
            </td>
            <td>
                @Html.DisplayFor(_ => a.Email)
            </td>
            <td>
                @Html.DisplayFor(_ => a.AgentCode)
            </td>
            <td>
                <a asp-page="/Agents/Edit" asp-route-id="@a.Id">Edit</a>
            </td>
            <td>
                <a asp-page="/Agents/Delete" asp-route-id="@a.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>