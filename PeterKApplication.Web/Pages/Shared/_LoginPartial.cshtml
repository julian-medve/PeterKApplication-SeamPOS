@using Microsoft.AspNetCore.Identity
@using PeterKApplication.Shared.Models
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-dark" href="/Agents">Agents</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" href="/Businesses">Businesses</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" href="/KnowledgeBase">Knowledge Base</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" href="/Statistics">Statistics</a>
    </li>
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
