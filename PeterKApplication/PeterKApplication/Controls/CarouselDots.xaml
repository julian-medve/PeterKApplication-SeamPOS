<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PeterKApplication.Controls.CarouselDots">
    <ContentView.Content>
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <BoxView WidthRequest="6" HeightRequest="6" CornerRadius="3" BackgroundColor="{StaticResource MediumGrayColor}" VerticalOptions="Center"/>
            <BoxView WidthRequest="10" HeightRequest="10" CornerRadius="5" BackgroundColor="{StaticResource MediumGrayColor}"/>
            <BoxView WidthRequest="6" HeightRequest="6" CornerRadius="3" BackgroundColor="{StaticResource MediumGrayColor}" VerticalOptions="Center"/>
            <BoxView WidthRequest="6" HeightRequest="6" CornerRadius="3" BackgroundColor="{StaticResource MediumGrayColor}" VerticalOptions="Center"/>
        </StackLayout>
    </ContentView.Content>
</ContentView>